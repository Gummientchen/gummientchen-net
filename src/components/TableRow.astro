---
export interface Props {
  component: string;
}

const { component } = Astro.props;
---

<tr>
  <td>{component}</td>
  <td><slot /></td>
</tr>

<style>
  td:first-child {
    text-align: right;
    padding-right: 2em;
  }
  td {
    border-top: 1px dashed var(--rig-font-color);
    vertical-align: top;
    padding: 0.5em 0;
    color: var(--rig-font-color);
  }
  tr:first-child td {
    border-top: none;
  }
  :global(tr td a) {
    color: var(--color-gray-200);
    text-decoration: none;
  }
</style>
