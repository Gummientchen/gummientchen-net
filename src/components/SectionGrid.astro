---
export interface Props {
  title: string;
  id: string;
}

const { title, id } = Astro.props;
---

<section id={id}>
  <div class="wrapper">
    <h2>{title}.</h2>
    <div class="cards">
      <slot />
    </div>
  </div>
</section>

<style>
  section {
    padding-block: 1em;
    padding-inline: 1em;
    background-color: var(--main-bg-color);
    z-index: 1;
  }

  section .cards {
    display: grid;
    grid-gap: 2em;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  }
  section h2 {
    color: var(--color-gray-100);
    font-size: 34px;
    font-weight: 600;
    line-height: 45px;
    margin-top: 0;
  }

  @media (min-width: 66rem) {
    section {
      grid-column: 1 / span 3;
      display: grid;
      grid-template-columns: 1fr 50rem 1fr;
      padding-inline: 0;
      padding-block-end: 5em;
    }
    .wrapper {
      grid-area: 1/2;
    }
  }

  @media (min-width: 87rem) {
    section {
      grid-template-columns: 1fr 80rem 1fr;
    }
  }
</style>
